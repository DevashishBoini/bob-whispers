# AI Assistant Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# GOOGLE GEMINI API CONFIGURATION
# =============================================================================
# Your Google Gemini API key - get it from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use for text conversations
GEMINI_TEXT_MODEL=gemini-2.5-flash

# Gemini model for audio processing (speech-to-text)
GEMINI_AUDIO_MODEL=gemini-2.5-flash

# Gemini embedding model for semantic search (Phase 2)
GEMINI_EMBEDDING_MODEL=models/embedding-001

# =============================================================================
# APPLICATION CONFIGURATION  
# =============================================================================
# Application environment (development, production)
APP_ENV=development

# FastAPI server settings
HOST=0.0.0.0
PORT=8000

# Enable debug mode (True/False)
DEBUG=True

# Application name and version
APP_NAME=AI Assistant
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database file path (relative to project root)
DATABASE_PATH=data/conversations.db

# ChromaDB vector database path (Phase 2)
CHROMADB_PATH=data/chromadb

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/app.log

# Enable file logging (True/False)
ENABLE_FILE_LOGGING=True

# =============================================================================
# GRADIO UI CONFIGURATION
# =============================================================================
# Gradio interface settings
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860

# Enable Gradio sharing (creates public URL)
GRADIO_SHARE=False

# =============================================================================
# RATE LIMITING (for future use)
# =============================================================================
# Maximum requests per minute for Gemini API (free tier: 10)
GEMINI_RPM_LIMIT=10

# Maximum requests per day for Gemini API (free tier: 250)
GEMINI_RPD_LIMIT=250

# =============================================================================
# AUDIO CONFIGURATION (Phase 3)
# =============================================================================
# Maximum audio file size in MB
MAX_AUDIO_FILE_SIZE=20

# Audio recording format
AUDIO_FORMAT=wav

# Default text-to-speech voice
DEFAULT_TTS_VOICE=en-US

# =============================================================================
# MEMORY CONFIGURATION (Phase 2)
# =============================================================================
# Number of recent messages to include in short-term memory
SHORT_TERM_MEMORY_SIZE=20

# Number of relevant conversations to retrieve from long-term memory
LONG_TERM_MEMORY_RESULTS=5

# Minimum similarity score for semantic search results (0.0 to 1.0)
MEMORY_SIMILARITY_THRESHOLD=0.7 